---
import { db, Reviews } from "astro:db";

if (Astro.request.method === "POST") {
  const form = await Astro.request.formData();
  const text = form.get("text") as string;
  const author = form.get("author") as string;
  const mediaId = Number(form.get("mediaId") || 0) || null;
  const authorImageId = Number(form.get("authorImageId") || 0) || null;

  await db.insert(Reviews).values({ text, author, mediaId, authorImageId });

  return Astro.redirect("/admin/reviews");
}

export const prerender = false;
---

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/src/styles/admin.css" />
    <title>Создать отзыв</title>
  </head>
  <body>
    <div class="container">
      <h1>Создать отзыв</h1>
      <form method="post" enctype="application/x-www-form-urlencoded">
        <label>Автор</label>
        <input type="text" name="author" required />

        <label>Текст отзыва</label>
        <textarea name="text" rows="4" required></textarea>

        <label>ID медиа (отзыв)</label>
        <input type="number" name="mediaId" />

        <label>ID фото автора</label>
        <input type="number" name="authorImageId" />

        <button type="submit">Создать</button>
      </form>
      <p><a href="/admin">← Назад</a></p>
    </div>
  </body>
</html>
