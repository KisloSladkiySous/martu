---
const {
  link = "",
  textColor = "rgba(255, 255, 255, 1)",
  backgroundColor = "255, 255, 255",
  alpha = "0.2",
} = Astro.props;
---

<a
  href={link}
  class="contact-us"
  target="_blank"
  aria-label="Связаться с нами"
  rel="noopener noreferrer"
>
  <slot> Связаться с нами </slot>
</a>

<style define:vars={{ textColor, backgroundColor, alpha }}>
  .contact-us {
    overflow: hidden;
    background-color: rgba(var(--backgroundColor), var(--alpha));
    color: var(--textColor);
    font-size: var(--fs-18);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    border-radius: 999px;
    text-align: center;
    display: inline-block;
    cursor: pointer;
    padding: 0.7em 2em;
    box-shadow: 0 10px 40px 10px rgb(255, 255, 255, 0);
    transition: all 0.2s ease-out;
  }

  @media (hover: hover) {
    .contact-us:hover {
      transform: scale(1.02) translateY(-5%);
      background-color: rgba(var(--backgroundColor), calc(var(--alpha) + 0.05));
      box-shadow: 0 4px 40px 20px rgb(255, 255, 255, 0.05);
    }
  }
  .contact-us:active {
    transform: scale(1.04) translateY(-5%);
    background-color: rgba(var(--backgroundColor), calc(var(--alpha) + 0.1));
  }
  .contact-us::before {
    content: "";
    background: linear-gradient(
      60deg,
      #0000,
      #0000,
      rgba(255, 255, 255, 0.15),
      #0000,
      #0000
    );
    width: 100%;
    height: 100%;
    animation: infinite slide-in 4s ease-out;
    position: absolute;
    top: 0;
    left: -100%;
    z-index: 1;
  }

  @keyframes slide-in {
    0%,
    20% {
      transform: translateX(0);
    }

    80%,
    100% {
      transform: translateX(300%);
    }
  }
</style>
