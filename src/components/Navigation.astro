---
import Logo from "../assets/logo.svg";
import Close from "../assets/icons/close.svg";
import Burger from "../assets/icons/burger.svg";
import VK from "../assets/icons/vk.svg";
import Inst from "../assets/icons/inst.svg";
import Whatsup from "../assets/icons/whatsup.svg";
import Telegramm from "../assets/icons/telegramm.svg";
import { socialLinks } from "../social-links.ts";
---

<nav class="navigation" id="navigation">
  <a class="logo logo-link" href="/#hero">
    <Logo />
  </a>

  <!-- Desktop Menu -->
  <div class="links desktop">
    <div class="column">
      <a class="links__item" href="/#about"><span>О нас</span></a>
      <a class="links__item" href="/#portfolio"><span>Портфолио</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href="/#advantages"><span>Почему мы</span></a>
      <a class="links__item" href="/#workflow"><span>Процесс</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href="/#price"><span>Услуги</span></a>
      <a class="links__item" href="/#reviews"><span>Отзывы</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href={socialLinks.inst} target="_blank"
        >Instagram</a
      >
      <a class="links__item" href={socialLinks.vk} target="_blank">Вконтакте</a>
    </div>
  </div>

  <!-- Mobile Burger -->
  <div class="burger mobile" id="burger-icon">
    <Burger />
  </div>

  <div class="mobile-backdrop" id="mobile-backdrop"></div>

  <div class="mobile-menu-overlay" id="mobile-menu">
    <div class="mobile-header">
      <div class="close mobile" id="close-icon">
        <Close />
      </div>
    </div>
    <div class="mobile-menu-content">
      <div class="mobile-links">
        <a class="mobile-link" href="/#about"> <span>О нас</span> </a>
        <a class="mobile-link" href="/#portfolio"> <span>Портфолио</span></a>
        <a class="mobile-link" href="/#advantages"> <span>Почему мы</span></a>
        <a class="mobile-link" href="/#workflow"> <span>Процесс</span></a>
        <a class="mobile-link" href="/#price"> <span>Услуги</span></a>
        <a class="mobile-link" href="/#reviews"> <span>Отзывы</span></a>
      </div>
    </div>
    <div class="media-links">
      <a href={socialLinks.vk} target="_blank" class="link">
        <VK />
      </a>
      <a href={socialLinks.inst} target="_blank" class="link">
        <Inst />
      </a>
      <a href={socialLinks.wu} target="_blank" class="link">
        <Whatsup />
      </a>
      <a href={socialLinks.tg} target="_blank" class="link">
        <Telegramm />
      </a>
    </div>
  </div>
</nav>

<style>
  .link:active {
    transform: scale(1.04) translateY(-5%);
  }
  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    margin: calc(var(--section-margin) + 1em) var(--section-margin) 0
      var(--section-margin);
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2.5em;
    width: calc(50vw - calc(var(--section-margin) * 2));
  }

  .logo {
    height: 4.125rem;
    width: 4.125rem;
    position: relative;
    z-index: 2001;
  }
  #logo-mobile {
    color: black;
    height: 45px;
    width: 45px;
  }

  @media (max-width: 1025px) {
    .navigation {
      background-color: var(--background-color);
      width: calc(100% - 40px);
      top: 0;
      left: 0;
      margin: 0;
      padding: 12px 20px 12px 20px;
    }

    .logo {
      height: 45px;
      width: 45px;
    }

    .desktop {
      display: none !important;
    }

    .mobile {
      display: block;
      cursor: pointer;
    }
  }

  .links__item {
    font-weight: 400;
    font-size: var(--fs-12);
    font-family: var(--ff-main);
    text-decoration: none;
    position: relative;
    width: 5rem;
  }

  .black {
    color: var(--text-color-primary);
  }

  .white {
    color: var(--text-color-white);
  }

  .column {
    display: flex;
    flex-direction: column;
    gap: 0.625em;
  }

  .divider {
    width: 1px;
    background-color: var(--border-color);
  }

  .links {
    gap: 2em;
    position: relative;
    z-index: 2;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 90vh;
    z-index: 2000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease-out;
    display: flex;
    flex-direction: column;

    background-color: var(--background-color);
  }

  .mobile-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  /* НОВЫЙ СТИЛЬ: БЕКДРОП */
  .mobile-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 1999;
    background-color: rgba(
      0,
      0,
      0,
      0.5
    ); /* тёмный бэкдроп — можно менять цвет */
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease;
  }

  .mobile-backdrop.open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-header {
    z-index: 4000;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 12px 20px 12px 20px;
  }

  .mobile-links {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: var(--fs-32);
    line-height: var(--lh-32);
  }

  .mobile-menu-content {
    margin-top: -69px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (max-height: 700px) {
    .mobile-menu-content {
      margin-top: 0;
      margin-bottom: 1.5rem;
    }
  }

  .mobile-link {
    padding: 0.5rem 0;
    color: var(--text-color-primary);
    text-decoration: none;
    text-align: center;
  }

  /* Optional: animate burger */
  .burger svg {
    transition: transform 0.3s ease;
  }

  .burger.open svg {
    transform: rotate(90deg);
  }

  @media (min-width: 1026px) {
    .mobile-menu-overlay {
      display: none !important;
    }
    .mobile-backdrop {
      display: none !important;
    }
  }

  .media-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    justify-content: center;
    margin-top: auto;
    bottom: 0;
  }

  .link {
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.4);
    height: 3.5rem;
    width: 3.5rem;
    display: flex;
    color: var(--text-color-white);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    justify-content: center;
    align-items: center;
  }
</style>

<script>
  // Только клиентский JS — Astro выполнит его в браузере
  document.addEventListener("DOMContentLoaded", () => {
    const burgerIcon = document.getElementById("burger-icon");
    const mobileMenu = document.getElementById("mobile-menu");
    const closeBtn = document.getElementById("close-icon");
    const mobileBackdrop = document.getElementById("mobile-backdrop"); // ← НОВАЯ СТРОКА
    const allLinks = document.querySelectorAll(
      ".mobile-link, .links__item, .logo-link, .logo-mobile"
    );

    // Функция открытия/закрытия меню
    function toggleMenu() {
      const isOpen = mobileMenu.classList.contains("open");
      if (isOpen) {
        mobileMenu.classList.remove("open");
        mobileBackdrop.classList.remove("open"); // ← НОВАЯ СТРОКА
        burgerIcon.classList.remove("open");
        document.body.style.overflow = "";
      } else {
        mobileMenu.classList.add("open");
        mobileBackdrop.classList.add("open"); // ← НОВАЯ СТРОКА
        burgerIcon.classList.add("open");
        document.body.style.overflow = "hidden";
      }
    }

    // Закрытие меню
    function closeMenu() {
      mobileMenu.classList.remove("open");
      mobileBackdrop.classList.remove("open"); // ← НОВАЯ СТРОКА
      burgerIcon.classList.remove("open");
      document.body.style.overflow = "";
    }

    if (burgerIcon) {
      burgerIcon.addEventListener("click", toggleMenu);
    }
    if (closeBtn) {
      closeBtn.addEventListener("click", toggleMenu);
    }

    allLinks.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });

    document.addEventListener("click", (e) => {
      if (
        mobileMenu.classList.contains("open") &&
        !mobileMenu.contains(e.target) &&
        !burgerIcon.contains(e.target)
      ) {
        closeMenu();
      }
    });

    const nav = document.getElementById("navigation");
    if (!nav) return;

    let isMobile = typeof window !== "undefined" && window.innerWidth <= 768;

    const sections = document.querySelectorAll("[data-page-index]");

    const changeColor = (index: number) => {
      if (isMobile) {
        nav.style.color = "black";
        return;
      }

      if (index % 2 !== 0) {
        nav.style.color = "black";
      } else {
        nav.style.color = "white";
      }
    };

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const index = Number(entry.target.getAttribute("data-page-index"));
            const sectionId = entry.target.getAttribute("data-page-id");

            if (!index && !sectionId) return;

            changeColor(index);

            allLinks.forEach((link) => {
              const targetId = link.getAttribute("href")?.slice(1);

              if (targetId?.includes(sectionId)) {
                link.classList.add("active");
              } else {
                link.classList.remove("active");
              }
            });
          }
        });
      },
      {
        threshold: 0.3,
        rootMargin: "0px",
      }
    );

    if (!isMobile) {
      sections.forEach((section) => observer.observe(section));
    }

    // Плавная прокрутка при клике (заменена на instant для точности)
    allLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        const targetId = link.getAttribute("href")?.replace("/", "");
        console.log(targetId);

        const targetSection = document.querySelector(targetId);

        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: "instant",
          });
          // history.replaceState(null, null, targetId);
        }
      });
    });

    window.addEventListener("resize", () => {
      if (window.innerWidth < 1025) {
        isMobile = true;
      }
      if (window.innerWidth > 1025) {
        isMobile = false;
      }
    });
  });
</script>
