---
import Logo from "../assets/logo.svg";
import Close from "../assets/icons/close.svg";
import Burger from "../assets/icons/burger.svg";
import { socialLinks } from "../social-links.ts";
---

<nav class="navigation" id="navigation">
  <a class="logo" href="#hero">
    <Logo />
  </a>

  <!-- Desktop Menu -->
  <div class="links desktop">
    <div class="column">
      <a class="links__item" href="#about"><span>О нас</span></a>
      <a class="links__item" href="#portfolio"><span>Портфолио</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href="#advantages"><span>Почему мы</span></a>
      <a class="links__item" href="#workflow"><span>Процесс</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href="#price"><span>Услуги</span></a>
      <a class="links__item" href="#reviews"><span>Отзывы</span></a>
    </div>
    <div class="divider"></div>
    <div class="column">
      <a class="links__item" href={socialLinks.inst} target="_blank"
        >Instagram</a
      >
      <a class="links__item" href={socialLinks.vk} target="_blank">Вконтакте</a>
    </div>
  </div>

  <!-- Mobile Burger -->
  <div class="burger mobile" id="burger-icon">
    <Burger />
  </div>

  <div class="mobile-menu-overlay" id="mobile-menu">
    <div class="mobile-menu-content">
      <div class="mobile-header">
        <a id="logo-mobile" href="#hero">
          <Logo />
        </a>
        <div class="close mobile" id="close-icon">
          <Close />
        </div>
      </div>
      <div class="mobile-links">
        <a class="mobile-link" href="#about"> <span>О нас</span> </a>
        <a class="mobile-link" href="#portfolio"> <span>Портфолио</span></a>
        <a class="mobile-link" href="#advantages"> <span>Почему мы</span></a>
        <a class="mobile-link" href="#workflow"> <span>Процесс</span></a>
        <a class="mobile-link" href="#price"> <span>Услуги</span></a>
        <a class="mobile-link" href="#reviews"> <span>Отзывы</span></a>
        <a class="mobile-link" href={socialLinks.inst} target="_blank"
          >Instagram</a
        >
        <a class="mobile-link" href={socialLinks.vk} target="_blank"
          >Вконтакте</a
        >
      </div>
    </div>
  </div>
</nav>

<style>
  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    margin: calc(var(--section-margin) + 1em) var(--section-margin) 0
      var(--section-margin);
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2.5em;
    width: calc(50vw - calc(var(--section-margin) * 2));
  }

  .logo {
    height: 4.125rem;
    width: 4.125rem;
    position: relative;
  }
  #logo-mobile {
    color: black;
    height: 45px;
    width: 45px;
  }

  @media (max-width: 1025px) {
    .navigation {
      backdrop-filter: blur(4px);
      width: calc(100% - 40px);
      top: 0;
      left: 0;
      margin: 0;
      padding: 20px 20px 12px 20px;
      border-bottom: 1px solid var(--border-color);
    }

    .logo {
      height: 45px;
      width: 45px;
    }

    .desktop {
      display: none !important;
    }

    .mobile {
      display: block;
      cursor: pointer;
    }
  }

  .links__item {
    color: var(--text-color-secondary);
    font-weight: 400;
    font-size: var(--fs-12);
    font-family: var(--ff-main);
    text-decoration: none;
    position: relative;
    width: 5rem;
  }

  .black {
    color: var(--text-color-primary);
  }

  .white {
    color: var(--text-color-white);
  }

  .column {
    display: flex;
    flex-direction: column;
    gap: 0.625em;
  }

  .divider {
    width: 1px;
    background-color: var(--border-color);
  }

  .links {
    gap: 2em;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 2000;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease;
    display: flex;
    flex-direction: column;

    background-color: var(--background-color);
  }

  .mobile-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }
  .mobile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding: 20px 20px 12px 20px;
  }
  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    font-size: 1.5rem;
    font-weight: 500;
  }

  .mobile-link {
    color: var(--text-color-primary);
    text-decoration: none;
    text-align: center;
    transition: color 0.2s;
  }

  /* Optional: animate burger */
  .burger svg {
    transition: transform 0.3s ease;
  }

  .burger.open svg {
    transform: rotate(90deg);
  }

  @media (min-width: 1026px) {
    .mobile-menu-overlay {
      display: none !important;
    }
  }
</style>

<script>
  // Только клиентский JS — Astro выполнит его в браузере
  document.addEventListener("DOMContentLoaded", () => {
    const burgerIcon = document.getElementById("burger-icon");
    const mobileMenu = document.getElementById("mobile-menu");
    const closeBtn = document.getElementById("close-icon");
    const allLinks = document.querySelectorAll(".mobile-link, #navigation a");

    // Функция открытия/закрытия меню
    function toggleMenu() {
      console.log("clicked");

      const isOpen = mobileMenu.classList.contains("open");
      if (isOpen) {
        mobileMenu.classList.remove("open");
        burgerIcon.classList.remove("open");
        document.body.style.overflow = "";
      } else {
        mobileMenu.classList.add("open");
        burgerIcon.classList.add("open");
        document.body.style.overflow = "hidden";
      }
    }

    // Закрытие меню
    function closeMenu() {
      mobileMenu.classList.remove("open");
      burgerIcon.classList.remove("open");
      document.body.style.overflow = "";
    }

    if (burgerIcon) {
      burgerIcon.addEventListener("click", toggleMenu);
    }
    if (closeBtn) {
      closeBtn.addEventListener("click", toggleMenu);
    }

    allLinks.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });

    document.addEventListener("click", (e) => {
      if (
        mobileMenu.classList.contains("open") &&
        !mobileMenu.contains(e.target) &&
        !burgerIcon.contains(e.target)
      ) {
        closeMenu();
      }
    });

    const nav = document.getElementById("navigation");
    const sections = document.querySelectorAll("[data-nav-section]");

    let currentSectionIndex = "black";

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const index = entry.target.getAttribute("data-section-index");

            const sectionId = entry.target.id;

            const isEven = index % 2 !== 0;

            // console.log(isEven, index);

            nav.style.color = isEven ? "white" : "black";

            allLinks.forEach((link) => {
              // Обновляем классы цвета

              link.classList.remove("white", "black");
              if (window.innerWidth < 1025) {
                link.classList.add(isEven ? "white" : "black");
              } else {
                link.classList.add(!isEven ? "white" : "black");
              }

              const targetId = link.getAttribute("href")?.slice(1);
              if (targetId === sectionId) {
                if (targetId !== "hero") {
                  link.classList.add("active");
                }
                if (window.location.hash !== `#${sectionId}`) {
                  history.replaceState(null, null, `#${sectionId}`);
                }
              } else {
                link.classList.remove("active");
              }
            });
          }
        });
      },
      {
        threshold: 0.5,
        rootMargin: "0px",
      }
    );

    sections.forEach((section) => observer.observe(section));

    // Плавная прокрутка при клике (заменена на instant для точности)
    allLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        const targetId = link.getAttribute("href");
        const targetSection = document.querySelector(targetId);

        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: "instant",
          });
          history.replaceState(null, null, targetId);
        }
      });
    });

    // Прокрутка к хешу при загрузке
    if (window.location.hash) {
      const targetSection = document.querySelector(window.location.hash);
      if (targetSection) {
        targetSection.scrollIntoView({
          behavior: "instant",
        });
      }
    }
  });
</script>
