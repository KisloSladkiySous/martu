---
import WorkFlowBackground from "../assets/images/workflow-section-background.png";
import SectionAware from "../components/SectionAware.astro";
import ShowCase from "../components/ShowCase.astro";
const imageSources = [
  {
    srcset: WorkFlowBackground.src,
    media: "(max-width: 1440)",
    type: "image/png",
  },
];
---

<ShowCase
  cssClass="border-bottom"
  date="Весна 2024"
  names="Ольга и Константин"
  hash="olga-and-konstantin"
>
  <h2 slot="showcase__title" class="showcase__title">
    В день вашей свадьбы забудьте обо всем,
    <span class="italic">наслаждайтесь</span> моментом.
  </h2>
</ShowCase>

<SectionAware
  class="background-image"
  sources={imageSources}
  src={WorkFlowBackground.src}
  alt="Feature"
  height="100%"
  width="100%"
  preloadSections={1}
  sectionSelector="[data-section]"
/>
