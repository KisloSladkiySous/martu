<style>
  .backdrop-adventages {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-image: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 25%,
      transparent 100%
    );
  }
  .border-bottom {
    border-bottom: 1px solid var(--border-color-white);
  }
  .border-top {
    border-top: 1px solid var(--border-color-white);
  }

  .list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    justify-content: center;
    row-gap: 1.5rem;
    column-gap: 4rem;
    /* width: 100%; */
    grid-template-columns: repeat(2, 1fr);
    color: var(--text-color-white);
  }

  @media (max-width: 767px) {
    .backdrop-adventages {
      background-image: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.7) 50%,
        transparent 100%
      );
    }
    .list {
      width: 100%;
      grid-template-columns: 1fr;
    }
  }

  .list-item {
    max-width: 15rem;
    padding-left: 2.1875rem;
    position: relative;
  }

  .list-item-title {
    font-size: var(--fs-16);
    margin-bottom: 0.625rem;
    text-transform: uppercase;
  }

  .list-item-description {
    font-size: var(--fs-14);
    color: var(--text-color-white);
  }

  .list-item::before {
    content: "";
    width: 0.5rem;
    height: 0.5rem;
    background-color: var(--background-color-white);
    border-radius: 50%;
    position: relative;
    display: block;
    left: -1.25rem;
    top: 1rem;
  }
</style>
