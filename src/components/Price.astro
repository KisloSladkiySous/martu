---
import SectionAware from "../components/SectionAware.astro";
import Section from "../layouts/Section.astro";

import ShowCase from "./ShowCase.astro";

const imageSources = [
  {
    srcset: "/martu/images/price-section-background.png",
    media: "(max-width: 1440)",
    type: "image/png",
  },
];
---

<Section id="workfkow" index="4">
  <SectionAware
    class="background-image"
    sources={imageSources}
    src="/martu/images/price-section-background.png"
    alt="Feature"
    height="100%"
    width="100%"
    preloadSections={1}
    slot="left-column-background"
    sectionSelector="[data-section]"
  />

  <div
    class="section__content-wrapper section__content-wrapper"
    slot="left-column"
  >
    <!-- <WorkflowLeftSection /> -->
    <ShowCase date="Сентябрь 2025" names="Вероника и Максим">
      <div slot="showcase__title" class="showcase__title">
        Проверьте <span class="italic">свободную</span> дату
      </div>
      <div slot="showcase__description" class="showcase__description">
        Планируете свадьбу? Узнайте, доступна ли ваша дата — она может быть уже
        почти вашей.
      </div>
    </ShowCase>
  </div>
  <div class="sticky" slot="right-column">
    <div
      class="section__content-wrapper section__content-wrapper--bordered-bottom"
    >
    </div>
  </div>
</Section>
<style>
  .sticky {
    position: sticky;
    top: 0;
    height: 100vh;
  }
</style>
