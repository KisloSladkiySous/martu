---
const { link, areaLabel } = Astro.props;
---

<a
  href={link}
  class="social"
  target="_blank"
  aria-label={areaLabel}
  rel="noopener noreferrer"
>
  <slot />
</a>

<style>
  @media (hover: hover) {
    .social:hover {
      transform: scale(1.02) translateY(-5%);
      box-shadow: 0 4px 40px 20px rgb(0, 0, 0, 0.02);
    }
  }
  .social:active {
    transform: scale(1.04) translateY(-5%);
  }
  .social {
    background-color: var(--card-color);
    color: var(--text-color-fourth);
    font-size: var(--fs-18);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: none;
    border-radius: 999px;

    display: flex;
    align-items: center;
    justify-content: center;

    padding: 0.75rem 3rem;

    transition: all 0.2s ease-out;
  }

  @media (max-width: 475px) {
    .social {
      padding: 0.7em 2em;
    }
  }
</style>
