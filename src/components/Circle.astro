---
interface Props {
  borderColor: string;
  size?: "lg" | "md" | "sm";
  imagePath?: string;
  text?: string;
}
const { borderColor = "white", size = "md", imagePath, text } = Astro.props;
const sizes = {
  sm: { outer: 5.375, inner: 4.75 },
  md: { outer: 11.875, inner: 10.5 },
  lg: { outer: 13.43, inner: 11.6 },
};
const margin = {
  sm: "5px",
  md: "11px",
  lg: "12px",
};

const outerSize = sizes[size].outer;
const innerSize = sizes[size].inner;
const rootMargin = margin[size];
---

<div
  class="outer circle"
  data-size={size}
  style={`width: ${outerSize}rem; height: ${outerSize}rem; ${imagePath ? `background-image: url("${imagePath}")` : ""}`}
>
  <div
    class="inner circle"
    style={`width: ${innerSize}rem; height: ${innerSize}rem;`}
  >
    <slot name="text" />
  </div>
</div>

<style define:vars={{ borderColor, rootMargin }}>
  .outer {
    background-color: var(--background-color-white);
    display: flex;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 2;
    position: relative;
  }
  .inner {
    margin: var(--rootMargin);
    border: 1px solid var(--borderColor);
  }
  .circle {
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
