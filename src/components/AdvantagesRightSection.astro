---
import Copyright from "./Copyright.astro";
import SectionAware from "./SectionAware.astro";
import AdvantagesVisual from "../assets/images/advantages-visual.png";
import AdvantagesVisualSecond from "../assets/images/advantages-team.jpg";
import AdvantagesSign from "../assets/icons/sign/advantages-sign.svg";
import Subtle from "./Subtle.astro";
import SvgAnimation from "./SvgAnimation.astro";
const imageSources = [
  {
    srcset: AdvantagesVisual.src,
    media: "(max-width: 1440)",
    type: "image/png",
  },
];
const imageSourcesSecond = [
  {
    srcset: AdvantagesVisualSecond.src,
    media: "(max-width: 1440)",
    type: "image/jpg",
  },
];
const { className } = Astro.props;
---

<div class:list={[className, "section-column__wrapper"]}>
  <Subtle lines={["  Именно это отличает", "нас от остальных"]} delay={400} />
  <h2 class="section__title">
    Мы не делаем <br /> “просто красиво” <br />— мы делаем <br />
    <span class="brand-color italic underline"
      >по-настоящему
      <SvgAnimation bottom="-1rem">
        <AdvantagesSign style="width: 100%" />
      </SvgAnimation>
    </span>
  </h2>

  <div class="content-block">
    <div class="photos">
      <img src={AdvantagesVisual.src} alt="team" height="260px" width="288px" />
      <img
        src={AdvantagesVisualSecond.src}
        alt="team"
        height="260px"
        width="288px"
      />
    </div>
    <div class="text">Нас выбирают за надёжность, опыт и подход</div>
  </div>

  <Copyright />
</div>

<style>
  .content-block {
    margin-top: 3.75rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .photos img {
    width: 18rem;
    height: auto;
    display: block;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .photos {
    display: flex;
    width: 100%;
    justify-content: space-evenly;
  }
  @media (max-width: 1025px) {
    .photos {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
  }
  @media (max-width: 455px) {
    /* .section__title {
      font-size: var(--fs-42);
      line-height: var(--lh-42);
      letter-spacing: 0;
    } */
  }
</style>
