---
interface Props {
  id: string;
  index: string;
  cssClass?: string;
  columnCss?: string;
}
const { id, index, cssClass = "section", columnCss = "" } = Astro.props;
---

<section
  id={id}
  class={`desktop ${cssClass}`}
  data-nav-section
  data-section-index={index}
  data-section
>
  <div class="section__column">
    <slot name="left-column-background" />
    <slot name="left-column" />
  </div>

  <div class={`section__column ${columnCss}`}>
    <slot name="right-column-background" />
    <slot name="right-column" />
  </div>
</section>
