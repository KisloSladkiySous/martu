---
interface Props {
  id: string;
  indexFirst: number;
  indexSecond: number;
}
const { id, indexFirst, indexSecond } = Astro.props;
---

<section
  id={id}
  class="section mobile"
  data-nav-section
  data-section
  data-section-index={indexFirst}
>
  <div class="section__column">
    <slot name="left-column-background" />
    <slot name="left-column" />
  </div>
</section>
<section
  id={id}
  class="section mobile"
  data-nav-section
  data-section
  data-section-index={indexSecond}
>
  <div class="section__column">
    <slot name="right-column-background" />
    <slot name="right-column" />
  </div>
</section>
